<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearnActivity">

    <LinearLayout
        android:id="@+id/learnheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/learntitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn"
                android:textSize="40dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/learndescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Known more information about Senior High School and its offered programs."
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/learncontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/learnheading"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/learnmaincontentaboutshs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#6644889c"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/learntitleabout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About SHS "
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:paddingStart="5dp"/>
                    <ImageView
                        android:id="@+id/learnaboutimage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/shsprograms"/>
                    <TextView
                        android:id="@+id/learnaboutview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn more >> "
                        android:textSize="15dp"
                        android:paddingStart="5dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/learnmaincontentofferedprograms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/learnmaincontentaboutshs"
                android:orientation="horizontal"
                android:background="#6687528e"
                android:paddingTop="5dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/learntitleofferedprograms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Program Offers"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:paddingStart="5dp"/>
                    <ImageView
                        android:id="@+id/learnaboutimageofferedprograms"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/shsprograms"/>
                    <TextView
                        android:id="@+id/learnaboutviewofferedprograms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn more >> "
                        android:textSize="15dp"
                        android:paddingStart="5dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/learnmaincontentfaqs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/learnmaincontentofferedprograms"
                android:orientation="horizontal"
                android:background="#66608e52"
                android:paddingTop="5dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/learntitlefaqs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FAQs"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:paddingStart="5dp"/>
                    <ImageView
                        android:id="@+id/learnaboutimagefaqs"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/shsprograms"/>
                    <TextView
                        android:id="@+id/learnaboutviewfaqs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn more >> "
                        android:textSize="15dp"
                        android:paddingStart="5dp"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>