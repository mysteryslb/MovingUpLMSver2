<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearnAcademicStrandsAcivity">

    <LinearLayout
        android:id="@+id/shsacadstandssheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shsacadstandstitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Academic Strands"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shsacadstandsndescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Enhanced Basic Education Act of 2013 allows incoming senior high school (SHS) students to pick among four tracks. Upon enrollment, they must choose from the following tracks."
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/shsacadstandscontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shsacadstandssheading"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/shsacadstandsmaincontentabm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#6644889c"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/shsacadstandstitleabm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ABM Strand"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:paddingStart="5dp"/>
                    <ImageView
                        android:id="@+id/shsacadstandsaboutimageabm"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/abm"/>
                    <TextView
                        android:id="@+id/shsacadstandsaboutviewabm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn more >> "
                        android:textSize="15dp"
                        android:paddingStart="5dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shsacadstandsmaincontentstem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shsacadstandsmaincontentabm"
                android:orientation="horizontal"
                android:background="#6687528e"
                android:paddingTop="5dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/shsacadstandstitlestem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STEM Strand"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:paddingStart="5dp"/>
                    <ImageView
                        android:id="@+id/shsacadstandsaboutimagestem"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/stem"/>
                    <TextView
                        android:id="@+id/shsacadstandsaboutviewstem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn more >> "
                        android:textSize="15dp"
                        android:paddingStart="5dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shsacadstandsmaincontentgas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shsacadstandsmaincontentstem"
                android:orientation="horizontal"
                android:background="#66608e52"
                android:paddingTop="5dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/shsacadstandstitlegas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GAS Strand"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:paddingStart="5dp"/>
                    <ImageView
                        android:id="@+id/shsacadstandsaboutimagegas"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/gas"/>
                    <TextView
                        android:id="@+id/shsacadstandsaboutviewgas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn more >> "
                        android:textSize="15dp"
                        android:paddingStart="5dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shsacadstandsmaincontenthumms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shsacadstandsmaincontentgas"
                android:orientation="horizontal"
                android:background="#669c554f"
                android:paddingTop="5dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/shsacadstandstitlehumms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HUMMS Strand"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:paddingStart="5dp"/>
                    <ImageView
                        android:id="@+id/shsacadstandsaboutimagehumms"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/music"/>
                    <TextView
                        android:id="@+id/shsacadstandsaboutviewhumms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn more >> "
                        android:textSize="15dp"
                        android:paddingStart="5dp"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>