<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearnSHSTracksActivity">

    <LinearLayout
        android:id="@+id/shstracksheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shstracktitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHS Tracks"
                android:textSize="40dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shstrackndescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Enhanced Basic Education Act of 2013 allows incoming senior high school (SHS) students to pick among four tracks. Upon enrollment, they must choose from the following tracks."
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/shstrackcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shstracksheading"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/shstrackmaincontentacademic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#6644889c"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/shstracktitleacademic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="College Preparation "
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:paddingStart="5dp"/>
                    <ImageView
                        android:id="@+id/shstrackaboutimageacademic"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/abm"/>
                    <TextView
                        android:id="@+id/shstrackaboutviewacademic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn more >> "
                        android:textSize="15dp"
                        android:paddingStart="5dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shstrackmaincontenttvl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shstrackmaincontentacademic"
                android:orientation="horizontal"
                android:background="#6687528e"
                android:paddingTop="5dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/shstracktitletvl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job-Ready Skills"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:paddingStart="5dp"/>
                    <ImageView
                        android:id="@+id/shstrackaboutimagetvl"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/stem"/>
                    <TextView
                        android:id="@+id/shstrackaboutviewtvl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn more >> "
                        android:textSize="15dp"
                        android:paddingStart="5dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shstrackmaincontentsports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shstrackmaincontenttvl"
                android:orientation="horizontal"
                android:background="#66608e52"
                android:paddingTop="5dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/shstracktitlesports"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Physical Education and Recreation"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:paddingStart="5dp"/>
                    <ImageView
                        android:id="@+id/shstrackaboutimagesports"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/gas"/>
                    <TextView
                        android:id="@+id/shstrackaboutviewsports"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn more >> "
                        android:textSize="15dp"
                        android:paddingStart="5dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shstrackmaincontentarts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shstrackmaincontentsports"
                android:orientation="horizontal"
                android:background="#669c554f"
                android:paddingTop="5dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/shstracktitlearts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Design, Performative, and Creative Industry"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:paddingStart="5dp"/>
                    <ImageView
                        android:id="@+id/shstrackaboutimagearts"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/music"/>
                    <TextView
                        android:id="@+id/shstrackaboutviewarts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn more >> "
                        android:textSize="15dp"
                        android:paddingStart="5dp"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>