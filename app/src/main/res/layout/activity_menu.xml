<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawable_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6649ca44">

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6649ca44">

        <LinearLayout
            android:id="@+id/tourmenucontainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/bg2"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/texttour"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Tour"
                    android:textSize="20sp"/>
                <ImageButton
                    android:id="@+id/btntour"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/assessment"
                    android:scaleType="fitXY"
                    android:background="@null"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shsprogramsmenucontainer"
            android:layout_below="@id/tourmenucontainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/bg2"
            android:layout_marginTop="10dp"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textshsprograms"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Learn"
                    android:textSize="20sp"/>
                <ImageButton
                    android:id="@+id/btnshsprograms"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/shsprograms"
                    android:scaleType="fitXY"
                    android:background="@null"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/discovermenucontainer"
            android:layout_below="@id/shsprogramsmenucontainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/bg2"
            android:layout_marginTop="10dp"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textdiscover"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Discover"
                    android:textSize="20sp"/>
                <ImageButton
                    android:id="@+id/btndiscover"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/shsprograms"
                    android:scaleType="fitXY"
                    android:background="@null"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/evaluatemenucontainer"
            android:layout_below="@id/discovermenucontainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/bg2"
            android:layout_marginTop="10dp"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textevaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Evaluate"
                    android:textSize="20sp"/>
                <ImageButton
                    android:id="@+id/btnevaluate"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/assessment"
                    android:scaleType="fitXY"
                    android:background="@null"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forumsmenucontainer"
            android:layout_below="@id/evaluatemenucontainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/bg2"
            android:layout_marginTop="10dp"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textforums"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Forums"
                    android:textSize="20sp"/>
                <ImageButton
                    android:id="@+id/btnforums"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/shsprograms"
                    android:scaleType="fitXY"
                    android:background="@null"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/SearchFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:src="@drawable/ic_action_search"
            app:backgroundTint="@android:color/holo_blue_light">
        </android.support.design.widget.FloatingActionButton>
</RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginBottom="3dp"
        app:menu="@menu/navigation_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

